<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:theme="@style/Theme.SheetSelection">

    <!-- Draggable indicator -->
    <FrameLayout
        android:id="@+id/draggedIndicator"
        style="?attr/sheetSelection_indicatorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- Header -->
    <ViewSwitcher
        android:id="@+id/viewSwitcherHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/header_buttons"
                android:layout_marginEnd="@dimen/header_container_margin_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle"
                    style="?attr/sheetSelection_titleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/lorem" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/buttonReset"
                    style="?attr/sheetSelection_buttonStyle"
                    android:src="@drawable/ic_restore"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageButton
                    android:id="@+id/buttonSearch"
                    style="?attr/sheetSelection_buttonStyle"
                    android:src="@drawable/ic_search"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageButton
                    android:id="@+id/buttonClose"
                    style="?attr/sheetSelection_buttonStyle"
                    android:src="@drawable/ic_close"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"
            app:queryBackground="?colorSurface"
            app:submitBackground="@null" />
    </ViewSwitcher>

    <!-- Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/recyclerViewSelectionEmpty"
            style="@style/Widget.SheetSelection.EmptyView"
            android:visibility="gone"
            tools:text="Nothing"
            tools:visibility="visible" />

        <com.khoben.sheetselection.EmptyRecyclerView
            android:id="@+id/recyclerViewSelectionItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="10"
            tools:listitem="@layout/row_selection_item" />

    </FrameLayout>

    <!-- Sticky button layout -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/doneButtonContainer"
        style="@style/Widget.SheetSelection.Sticky"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/doneButton"
            style="@style/Widget.SheetSelection.Sticky.Button" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
